

<div class="container">
  <h1>Add a new dose for <%= @cocktail.name %></h1>

  <%= simple_form_for [@cocktail, @dose] do |f|%>

    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: Ingredient.all %>
    <%= f.button :submit, class: 'btn btn-primary' %>


  <% end %>

  <%= link_to 'Back', cocktails_path, class: 'btn btn-success mt-2' %>

</div>